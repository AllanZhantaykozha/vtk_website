// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id           Int      @id @default(autoincrement())
  fullName     String   @unique
  group        String?  @unique
  description  String?
  jobName      String?
  password     String
  cellNumber   String[]
  photos       String[]
  profilePhoto String?

  categories Category[]
}

model Admin {
  id       Int    @id @default(autoincrement())
  login    String @unique
  password String @unique
}

model Category {
  id      Int      @id @default(autoincrement())
  title   String
  photos  String[]
  content String

  teacherId Int
  teacher   Teacher @relation(fields: [teacherId], references: [id])
}
